{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
    ]
  },
  "include": [
    // JavaScript
    "src/**/*.js",
    "build/**/*.js",
    // Vue
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "docsrc",
    "test"
  ]
}
